{
	"name" : "Readly",
	"version" : "0.6.0.16",
	"manifest_version" : 2,
	
	"description" : "A little Google Reader treatment for Feedly",
	"icons" : {
		"16" : "icons/readly-16.png",
		"32" : "icons/readly-32.png",
		"64" : "icons/readly-64.png",
		"128" : "icons/readly-128.png"
	},
	
	"background" : {
		"persistent" : false,
		"scripts" : ["background.js"]
	},
	
	"content_scripts" : [{
			"matches" : ["http://www.feedly.com/home*", "https://www.feedly.com/home*", "http://cloud.feedly.com/*", "https://cloud.feedly.com/*"],
			"css" : ["styles.css"],
			"js" : ["script.js"]
	}]
}